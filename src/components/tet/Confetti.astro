---
/**
 * Confetti / pháo giấy nhiều màu rơi xoay (CSS).
 * Số lượng và màu random lúc build.
 */
const count = 45
---

<div class="confetti" aria-hidden="true">
  {[...Array(count)].map((_, i) => (
    <div
      class="confetti__item"
      style={`--x: ${Math.random() * 100}vw; --dly: ${Math.random() * 2}s; --c: hsl(${Math.random() * 50 + 10}, 85%, 55%)`}
    />
  ))}
</div>

<style>
  .confetti {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }
  .confetti__item {
    position: absolute;
    left: var(--x);
    top: -8px;
    width: 10px;
    height: 6px;
    background: var(--c);
    border-radius: 2px;
    animation: confettiFall 4s linear infinite;
    animation-delay: var(--dly);
    opacity: 0.9;
  }
  @keyframes confettiFall {
    0% {
      top: -8px;
      transform: rotate(0deg) translateX(0);
    }
    100% {
      top: 100vh;
      transform: rotate(720deg) translateX(40px);
    }
  }
</style>
