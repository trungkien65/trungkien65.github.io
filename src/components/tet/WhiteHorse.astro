---
/**
 * Hoạt ảnh ngựa trắng SVG đầy đủ bộ phận (đầu, mình, 4 chân, đuôi, bờm).
 * Chạy quanh viền trang (path hình chữ nhật), có animation chân khi phi.
 */
---

<div class="white-horse-wrap" aria-hidden="true">
  <div class="white-horse-run">
    <svg
      class="white-horse-svg"
      viewBox="0 0 120 80"
      xmlns="http://www.w3.org/2000/svg"
      role="img"
      aria-label="Ngựa trắng"
    >
      <g class="horse-body">
        <!-- Đuôi -->
        <path
          class="horse-tail"
          fill="none"
          stroke="#e8e8e8"
          stroke-width="3"
          stroke-linecap="round"
          d="M18 42 Q8 38 12 28 Q14 22 20 18"
        />
        <!-- Mình -->
        <ellipse class="horse-torso" cx="45" cy="42" rx="28" ry="14" fill="#fff" stroke="#ddd" stroke-width="1.5" />
        <!-- Bờm -->
        <path
          class="horse-mane"
          fill="none"
          stroke="#f0f0f0"
          stroke-width="2.5"
          stroke-linecap="round"
          d="M68 32 Q72 28 78 30 Q82 34 80 38 Q76 42 72 40"
        />
        <!-- Cổ -->
        <path
          class="horse-neck"
          fill="#fff"
          stroke="#ddd"
          stroke-width="1.2"
          d="M68 36 L88 28 L92 32 L72 40 Z"
        />
        <!-- Đầu -->
        <ellipse class="horse-head" cx="95" cy="28" rx="12" ry="10" fill="#fff" stroke="#ddd" stroke-width="1.5" />
        <!-- Tai -->
        <path class="horse-ear" fill="#fff" stroke="#ddd" stroke-width="1" d="M102 22 L108 16 L110 22 Z" />
        <!-- Mắt -->
        <circle class="horse-eye" cx="100" cy="27" r="2" fill="#333" />
        <!-- Mũi / miệng -->
        <path fill="none" stroke="#ddd" stroke-width="1" d="M104 30 L112 29" />
        <!-- Chân trước trái -->
        <g class="horse-leg horse-leg-fl">
          <line x1="62" y1="52" x2="62" y2="68" stroke="#ddd" stroke-width="3" stroke-linecap="round" />
          <line x1="62" y1="68" x2="60" y2="78" stroke="#ddd" stroke-width="2" stroke-linecap="round" />
        </g>
        <!-- Chân trước phải -->
        <g class="horse-leg horse-leg-fr">
          <line x1="72" y1="52" x2="72" y2="66" stroke="#ddd" stroke-width="3" stroke-linecap="round" />
          <line x1="72" y1="66" x2="74" y2="76" stroke="#ddd" stroke-width="2" stroke-linecap="round" />
        </g>
        <!-- Chân sau trái -->
        <g class="horse-leg horse-leg-bl">
          <line x1="28" y1="52" x2="28" y2="68" stroke="#ddd" stroke-width="3" stroke-linecap="round" />
          <line x1="28" y1="68" x2="26" y2="78" stroke="#ddd" stroke-width="2" stroke-linecap="round" />
        </g>
        <!-- Chân sau phải -->
        <g class="horse-leg horse-leg-br">
          <line x1="38" y1="52" x2="38" y2="66" stroke="#ddd" stroke-width="3" stroke-linecap="round" />
          <line x1="38" y1="66" x2="40" y2="76" stroke="#ddd" stroke-width="2" stroke-linecap="round" />
        </g>
      </g>
    </svg>
  </div>
</div>

<style>
  /* Wrapper chạy quanh page: fixed, di chuyển theo 4 cạnh */
  .white-horse-wrap {
    position: fixed;
    width: 80px;
    height: 54px;
    z-index: 2;
    pointer-events: none;
    animation: horseRunAround 25s linear infinite;
  }

  /* Đường chạy quanh viewport + xoay theo hướng chạy (trái→trên→phải→dưới→trái) */
  @keyframes horseRunAround {
    0% {
      left: 10px;
      top: 50%;
      transform: translateY(-50%) rotate(0deg);
    }
    12.5% {
      left: 10px;
      top: 12%;
      transform: translateY(-50%) rotate(-90deg);
    }
    25% {
      left: 50%;
      top: 10px;
      transform: translate(-50%, 0) rotate(0deg);
    }
    37.5% {
      left: calc(100% - 10px);
      top: 12%;
      transform: translate(-100%, -50%) rotate(90deg);
    }
    50% {
      left: calc(100% - 10px);
      top: 50%;
      transform: translate(-100%, -50%) rotate(90deg);
    }
    62.5% {
      left: calc(100% - 10px);
      top: 88%;
      transform: translate(-100%, -50%) rotate(-90deg);
    }
    75% {
      left: 50%;
      top: calc(100% - 10px);
      transform: translate(-50%, -100%) rotate(180deg);
    }
    87.5% {
      left: 10px;
      top: 88%;
      transform: translateY(-50%) rotate(90deg);
    }
    100% {
      left: 10px;
      top: 50%;
      transform: translateY(-50%) rotate(0deg);
    }
  }

  /* Container ngựa: bounce nhẹ khi chạy */
  .white-horse-run {
    width: 100%;
    height: 100%;
    animation: horseBounce 0.25s ease-in-out infinite;
  }

  @keyframes horseBounce {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-4px);
    }
  }

  .white-horse-svg {
    width: 100%;
    height: 100%;
    filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.2));
  }

  /* Animation chân: gallop (2 chân trước / 2 chân sau đổi nhau) */
  .horse-leg-fl {
    transform-origin: 62px 52px;
    animation: legFront 0.2s ease-in-out infinite;
  }
  .horse-leg-fr {
    transform-origin: 72px 52px;
    animation: legFront 0.2s ease-in-out infinite 0.1s;
  }
  .horse-leg-bl {
    transform-origin: 28px 52px;
    animation: legBack 0.2s ease-in-out infinite 0.05s;
  }
  .horse-leg-br {
    transform-origin: 38px 52px;
    animation: legBack 0.2s ease-in-out infinite 0.15s;
  }

  @keyframes legFront {
    0%,
    100% {
      transform: rotate(0deg);
    }
    50% {
      transform: rotate(18deg);
    }
  }

  @keyframes legBack {
    0%,
    100% {
      transform: rotate(0deg);
    }
    50% {
      transform: rotate(-18deg);
    }
  }

  /* Đuôi bay theo nhịp */
  .horse-tail {
    transform-origin: 18px 42px;
    animation: tailSway 0.3s ease-in-out infinite;
  }

  @keyframes tailSway {
    0%,
    100% {
      transform: rotate(-5deg);
    }
    50% {
      transform: rotate(8deg);
    }
  }
</style>
