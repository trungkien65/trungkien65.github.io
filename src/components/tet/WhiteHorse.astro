---
/**
 * Ngựa trắng chạy quanh viền trang.
 * SVG: tham khảo 5rerxfz01.svg (public/horse-ref.svg), filter trắng.
 */
---

<div class="white-horse-wrap" aria-hidden="true">
  <div class="white-horse-run">
    <img
      class="white-horse-svg"
      src="/horse-ref.svg"
      alt=""
      width="80"
      height="120"
      role="img"
      aria-label="Ngựa trắng"
    />
  </div>
</div>

<style>
  /* Wrapper chạy quanh page: fixed, di chuyển theo 4 cạnh */
  .white-horse-wrap {
    position: fixed;
    width: 80px;
    height: 120px;
    z-index: 2;
    pointer-events: none;
    animation: horseRunAround 25s linear infinite;
  }

  /* Đường chạy quanh viewport + xoay theo hướng chạy (trái→trên→phải→dưới→trái) */
  @keyframes horseRunAround {
    0% {
      left: 10px;
      top: 50%;
      transform: translateY(-50%) rotate(0deg);
    }
    12.5% {
      left: 10px;
      top: 12%;
      transform: translateY(-50%) rotate(-90deg);
    }
    25% {
      left: 50%;
      top: 10px;
      transform: translate(-50%, 0) rotate(0deg);
    }
    37.5% {
      left: calc(100% - 10px);
      top: 12%;
      transform: translate(-100%, -50%) rotate(90deg);
    }
    50% {
      left: calc(100% - 10px);
      top: 50%;
      transform: translate(-100%, -50%) rotate(90deg);
    }
    62.5% {
      left: calc(100% - 10px);
      top: 88%;
      transform: translate(-100%, -50%) rotate(-90deg);
    }
    75% {
      left: 50%;
      top: calc(100% - 10px);
      transform: translate(-50%, -100%) rotate(180deg);
    }
    87.5% {
      left: 10px;
      top: 88%;
      transform: translateY(-50%) rotate(90deg);
    }
    100% {
      left: 10px;
      top: 50%;
      transform: translateY(-50%) rotate(0deg);
    }
  }

  /* Container ngựa: bounce nhẹ khi chạy */
  .white-horse-run {
    width: 100%;
    height: 100%;
    animation: horseBounce 0.25s ease-in-out infinite;
  }

  @keyframes horseBounce {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-4px);
    }
  }

  .white-horse-svg {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: brightness(0) invert(1) drop-shadow(0 2px 8px rgba(0, 0, 0, 0.2));
  }
</style>
