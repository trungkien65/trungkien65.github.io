---
/**
 * Sao nhấp nháy rải rác (hiệu ứng lấp lánh).
 */
const count = 18
---

<div class="sparkles" aria-hidden="true">
  {[...Array(count)].map((_, i) => (
    <span class="sparkles__item" style={`--i: ${i}`}>✦</span>
  ))}
</div>

<style>
  .sparkles {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }
  .sparkles__item {
    position: absolute;
    left: calc(var(--i) * 5.5% + 1%);
    top: calc((var(--i) * 7) % 100%);
    font-size: 0.7rem;
    color: rgba(255, 255, 200, 0.85);
    animation: sparkle 2s ease-in-out infinite;
    animation-delay: calc(var(--i) * 0.12s);
  }
  @keyframes sparkle {
    0%,
    100% {
      opacity: 0.2;
      transform: scale(0.8);
    }
    50% {
      opacity: 1;
      transform: scale(1.2);
    }
  }
</style>
